<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fitsSystemWindows="true" android:background="@color/colorWhite"
    tools:context=".MainActivity" tools:openDrawer="start" android:id="@+id/drawer_layout">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/toolbarTop" android:background="@color/colorBlue">

                <TextView
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:text="AppAttendance" android:layout_marginLeft="20dp"
                    android:textStyle="bold" android:fontFamily="@font/aladin"
                    android:textSize="30sp" android:baselineAligned="false"
                    android:textColor="@color/colorWhite"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/fragment_container"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view" android:layout_gravity="start"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header" app:menu="@menu/drawer_menu"
        android:background="@color/colorWhite" app:itemTextColor="@color/colorBlack"
        app:itemIconTint="@color/colorBlack"/>

</android.support.v4.widget.DrawerLayout>